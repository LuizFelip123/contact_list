<% content_for :title, "Editar Contato" %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <h1 class="mb-4">Editar Contato</h1>

      <div class="card">
        <div class="card-body">
          <%= render "form", contact: @contact %>
        </div>
      </div>

      <div class="mt-3">
        <%= link_to "Ver Contato", @contact, class: "btn btn-outline-primary me-2" %>
        <%= link_to "Voltar para lista", contacts_path, class: "btn btn-secondary" %>
      </div>

    </div>
  </div>
</div>
